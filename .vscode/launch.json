{
  "version": "0.2.0",
  "configurations": [
    // ==========================================================================
    // STREAMLIT APPLICATION
    // ==========================================================================
    {
      "name": "Streamlit: Run Chatbot (bot.py)",
      "type": "debugpy",
      "request": "launch",
      "module": "streamlit",
      "args": [
        "run",
        "${workspaceFolder}/bot.py",
        "--server.port=8501"
      ],
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}",
      "env": {
        "PYTHONPATH": "${workspaceFolder}"
      },
      "justMyCode": true
    },
    {
      "name": "Streamlit: Run Solution Bot",
      "type": "debugpy",
      "request": "launch",
      "module": "streamlit",
      "args": [
        "run",
        "${workspaceFolder}/solutions/bot.py",
        "--server.port=8501"
      ],
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}",
      "env": {
        "PYTHONPATH": "${workspaceFolder}"
      },
      "justMyCode": true
    },

    // ==========================================================================
    // RUN CURRENT FILE
    // ==========================================================================
    {
      "name": "Python: Current File",
      "type": "debugpy",
      "request": "launch",
      "program": "${file}",
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}",
      "env": {
        "PYTHONPATH": "${workspaceFolder}"
      },
      "justMyCode": true
    },

    // ==========================================================================
    // SOLUTION FILES - AGENT VARIANTS
    // ==========================================================================
    {
      "name": "Run: solutions/agent.py",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/solutions/agent.py",
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}",
      "env": {
        "PYTHONPATH": "${workspaceFolder}"
      }
    },
    {
      "name": "Run: solutions/agent-chat.py",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/solutions/agent-chat.py",
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}",
      "env": {
        "PYTHONPATH": "${workspaceFolder}"
      }
    },
    {
      "name": "Run: solutions/agent-vector.py",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/solutions/agent-vector.py",
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}",
      "env": {
        "PYTHONPATH": "${workspaceFolder}"
      }
    },
    {
      "name": "Run: solutions/agent-cypher.py",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/solutions/agent-cypher.py",
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}",
      "env": {
        "PYTHONPATH": "${workspaceFolder}"
      }
    },

    // ==========================================================================
    // TESTING
    // ==========================================================================
    {
      "name": "Pytest: All Tests",
      "type": "debugpy",
      "request": "launch",
      "module": "pytest",
      "args": [
        "solutions/",
        "-v",
        "--tb=short"
      ],
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}",
      "env": {
        "PYTHONPATH": "${workspaceFolder}"
      }
    },
    {
      "name": "Pytest: Current File",
      "type": "debugpy",
      "request": "launch",
      "module": "pytest",
      "args": [
        "${file}",
        "-v",
        "--tb=short"
      ],
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}",
      "env": {
        "PYTHONPATH": "${workspaceFolder}"
      }
    },
    {
      "name": "Pytest: Solution Tests",
      "type": "debugpy",
      "request": "launch",
      "module": "pytest",
      "args": [
        "${workspaceFolder}/solutions/test_solution.py",
        "-v",
        "--tb=long"
      ],
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}",
      "env": {
        "PYTHONPATH": "${workspaceFolder}"
      }
    },

    // ==========================================================================
    // DEBUG WITH BREAKPOINTS
    // ==========================================================================
    {
      "name": "Debug: Current File (Step Through)",
      "type": "debugpy",
      "request": "launch",
      "program": "${file}",
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}",
      "env": {
        "PYTHONPATH": "${workspaceFolder}"
      },
      "justMyCode": false,
      "stopOnEntry": false
    },
    {
      "name": "Debug: Streamlit with Full Tracing",
      "type": "debugpy",
      "request": "launch",
      "module": "streamlit",
      "args": [
        "run",
        "${workspaceFolder}/solutions/bot.py",
        "--server.port=8501"
      ],
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}",
      "env": {
        "PYTHONPATH": "${workspaceFolder}"
      },
      "justMyCode": false
    }
  ]
}
